<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:gravity="center"
    tools:context=".IpFragment">

    <!-- TODO: Update blank fragment layout -->

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:gravity="center_vertical|center_horizontal"
        android:text="Configuracion de IP"
        android:textColor="@android:color/background_light"
        android:textSize="30sp" />


    <EditText
        android:id="@+id/campoDireccionIP"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:ems="10"
        android:gravity="center_vertical|center_horizontal"
        android:hint="INGRESE IP"
        android:inputType="text|number"
        android:textColor="#ffffffff" />

    <Button
        android:id="@+id/btnRegistrarIP"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:gravity="center_vertical|center_horizontal"
        android:onClick="RegistrarIP"
        android:text="REGISTRAR IP"
        tools:ignore="OnClick" />

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.12"
        android:onClick="EliminarIP"
        android:text="Eliminar"
        tools:ignore="OnClick" />
</LinearLayout>